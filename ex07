package entrada_processamento_saida;

import java.util.Scanner;

public class ex07 {

public static void main(String[] args) {
// Entrar via teclado com o valor de cinco produtos. Após as entradas, digitar um valor referente ao pagamento da
// somatória destes valores. Calcular e exibir o troco que deverá ser devolvido.

Scanner ler = new Scanner(System.in);

double p1, p2, p3, p4, p5, PAG, T, V;

System.out.printf("Digite o valor do produto 1: ");        
p1 = ler.nextDouble();  

System.out.printf("Digite o valor do produto 2: ");      
p2 = ler.nextDouble();      

System.out.printf("Digite o valor do produto 3: ");    
p3= ler.nextDouble();

System.out.printf("Digite o valor do produto 4: ");      
p4= ler.nextDouble();

System.out.printf("Digite o valor do produto 5: ");      
p5= ler.nextDouble();


V = p1 + p2 + p3 + p4 + p5;      

System.out.printf("");          

System.out.printf("O valor da compra é: " + V);    

System.out.printf(" Agora digite o valor do pagamento:  ");    

PAG = ler.nextDouble();    

System.out.printf("");          

T = (PAG - V);        

System.out.printf(" Então o valor do troco é: " + T);


}

}

